@model dyplomowaApka00.Models.Inwestycja

<script src="~/assets/data-tables/jquery.data-tables.min.js"></script>
<script src="~/assets/data-tables/data-tables.bootstrap4.min.js"></script>
<link rel="stylesheet" href="~/assets/data-tables/data-tables.bootstrap4.min.css" type="text/css">
<link href="~/assets/sogo/sogoTabela.css" rel="stylesheet" />

@if (Model.InwestycjaId == 1)
{
    Layout = "~/Views/Shared/_LayoutLtn.cshtml";
}
else if (Model.InwestycjaId == 2)
{
    Layout = "~/Views/Shared/_LayoutKrzptw.cshtml";
}
else
{
    Layout = "~/Views/Shared/_LayoutSogo.cshtml";
}

@{
    ViewBag.Title = "Details";
}

<section class="header1 cid-qw2YPHwGm4 mbr-parallax-background" id="header1-s" data-rv-view="40">

    <div class="mbr-overlay" style="opacity: 0.2;">
    </div>
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="mbr-white col-md-10">
                <h1 class="mbr-section-title align-center mbr-bold pb-3 mbr-fonts-style display-1">@Html.DisplayFor(model => model.Nazwa)</h1>
            </div>
        </div>
    </div>
</section>


<section id="feature">
    <div>
        @if (Model.InwestycjaId == 1)
        {
            @Html.Partial("_FeatureLtn")
        }
        else if (Model.InwestycjaId == 2)
        {
            @Html.Partial("_FeatureKrzptw")
        }
        else
        {
            @Html.Partial("_FeatureSogo")
        }
    </div>
</section>
<section id="tabele">
    <div>
        @{ Html.RenderAction("MieszkaniaZInwestycji", "Mieszkania", new { id = Model.InwestycjaId }); }
    </div>
    <div>
        @if (Model.Domy != null && Model.Domy.Any())
        {
            { Html.RenderAction("DomyZInwestycji", "Domy", new { id = Model.InwestycjaId }); }
        }
    </div>
</section>
<section id="galeria">
    <div>
        @if (Model.InwestycjaId == 1)
        {
            @Html.Partial("_GaleriaLtn")
        }
        else if (Model.InwestycjaId == 2)
        {
            @Html.Partial("_GaleriaKrzptw")
        }
        else
        {
            @Html.Partial("_GaleriaSogo")
        }
    </div>
</section>
<section id="wykonczenie">
    <div>
        @if (Model.InwestycjaId == 1)
        {
            @Html.Partial("_WykonczenieLtn")
        }
        else if (Model.InwestycjaId == 2)
        {
            @Html.Partial("_WykonczenieKrzptw")
        }
        else
        {
            @Html.Partial("_WykonczenieSogo")
        }
    </div>
</section>
