@model IEnumerable<dyplomowaApka00.Models.Dom>

<section class="section-table cid-qvZiwymKFt" id="table1-n" data-rv-view="1454">

    <div class="container container-table">
        <h2 class="mbr-section-title mbr-fonts-style align-center pb-3 display-2">
            Tabela domów
        </h2>
        <h3 class="mbr-section-subtitle mbr-fonts-style align-center pb-5 mbr-light display-5">
            Zobacz wszystkie domy w ofercie
        </h3>
        <div class="table-wrapper">
            <div class="container">

            </div>
            <div class="container scroll">
                <table class="table" cellspacing="0">
                    <thead>
                        <tr class="table-heads ">


                            <th class="head-item mbr-fonts-style display-7">
                                @Html.DisplayNameFor(model => model.SymbolDomu)
                            </th>
                            
                            <th class="head-item mbr-fonts-style display-7">
                                @Html.DisplayNameFor(model => model.Status.Nazwa)
                            </th>

                            <th class="head-item mbr-fonts-style display-7">
                                @Html.DisplayNameFor(model => model.Cena)
                            </th>
                            <th class="head-item mbr-fonts-style display-7">
                                @Html.DisplayNameFor(model => model.Powerzchnia)
                            </th>
                            <th class="head-item mbr-fonts-style display-7">
                                @Html.DisplayNameFor(model => model.Pokoje)
                            </th>
                            
                            <th class="head-item mbr-fonts-style display-7">
                                @Html.DisplayNameFor(model => model.TerminRealizacji)
                            </th>
                           
                            <th class="head-item mbr-fonts-style display-7">
                               
                            </th>
                            <th class="head-item mbr-fonts-style display-7"></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SymbolDomu)
                                </td>
                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status.Nazwa)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Cena)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Powerzchnia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Pokoje)
                                </td>
                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.TerminRealizacji)
                                </td>
                                
                                <td>
                                    
                                </td>
                                <td>
                                    @Html.ActionLink("Szczegóły", "Details", new { id = item.DomId }) 
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <div class="container table-info-container">

            </div>
        </div>
    </div>
</section>
