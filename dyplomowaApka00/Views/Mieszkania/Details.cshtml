@model dyplomowaApka00.Models.Mieszkanie

@if (Model.InwestycjaId == 1)
{
    Layout = "~/Views/Shared/_LayoutLtn.cshtml";
}
else if (Model.InwestycjaId == 2)
{
    Layout = "~/Views/Shared/_LayoutKrzptw.cshtml";
}
else if (Model.InwestycjaId == 3)
{
    Layout = "~/Views/Shared/_LayoutSmolec.cshtml";
}
else
{
    Layout = "~/Views/Shared/_LayoutSogo.cshtml";
}

@{
    ViewBag.Title = "Mieszkanie";
}

<!--mobirise-->

<section class="header1 cid-qw2YPHwGm4 mbr-parallax-background" id="header1-s" data-rv-view="40">

    <div class="mbr-overlay" style="opacity: 0.2;">
    </div>
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="mbr-white col-md-10">
                <h1 class="mbr-section-title align-center mbr-bold pb-3 mbr-fonts-style display-1">@Html.DisplayFor(model => model.Etap.Nazwa)</h1>
            </div>
        </div>
    </div>
</section>

<!--karty-->
<section class="counters1 counters cid-qvZgUfcMPB" id="counters1-1f" data-rv-view="452">
    <div class="container">
        <h2 class="mbr-section-title pb-3 align-center mbr-fonts-style display-2">
            @Html.DisplayFor(model => model.SymbolMieszkania)
        </h2>
        <h3 class="mbr-section-subtitle align-center mbr-fonts-style display-5">
            Symbol mieszkania
        </h3>
        <div class="align-center">
            @if (Roles.IsUserInRole("Operator"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = Model.MieszkanieId }, new { @class = "btn btn-primary display-4" })
            }
            else if (Roles.IsUserInRole("Admin"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = Model.MieszkanieId }, new { @class = "btn btn-primary display-4" })
            }
            else if (Roles.IsUserInRole("Obsluga"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = Model.MieszkanieId }, new { @class = "btn btn-primary display-4" })
            }
        </div>
        <div class="container pt-4 mt-2">
            <div class="media-container-row">
                <div class="card p-3 align-center col-12 col-md-6 col-lg-4">
                    <div class="panel-item p-3">

                        <div class="card-text"> 
                                @*wyświetla cenę tylko w przypadku gdy status jest == 1*@
                                @if (Model.StatusId < 3)
                                {
                                    <h3 class="pt-3 pb-3 mbr-fonts-style display-2">
                                        @Html.DisplayFor(model => model.Cena)
                                    </h3>
                                    <h4 class="mbr-content-title mbr-bold mbr-fonts-style display-7">
                                        Cena
                                    </h4>
                                }
                                else
                                {
                                    <h3 class="pt-3 pb-3 mbr-fonts-style display-2">
                                        @Html.DisplayFor(model => model.Status.Nazwa)
                                    </h3>
                                    <h4 class="mbr-content-title mbr-bold mbr-fonts-style display-7">
                                        &nbsp;
                                    </h4>
                                }

                        </div>
                    </div>
                </div>

                <div class="card p-3 align-center col-12 col-md-6 col-lg-3">
                    <div class="panel-item p-3">

                        <div class="card-text">
                            <h3 class="pt-3 pb-3 mbr-fonts-style display-2">
                                @Html.DisplayFor(model => model.Powierzchnia)
                            </h3>
                            <h4 class="mbr-content-title mbr-bold mbr-fonts-style display-7">
                                Powierzchnia mieszkania
                            </h4>
                           
                        </div>
                    </div>
                </div>

                <div class="card p-3 align-center col-12 col-md-6 col-lg-2">
                    <div class="panel-item p-3">

                        <div class="card-text">
                            <h3 class="count pt-3 pb-3 mbr-fonts-style display-2">
                                @Html.DisplayFor(model => model.Pokoje)
                            </h3>
                            <h4 class="mbr-content-title mbr-bold mbr-fonts-style display-7">
                                Ilość pokoi
                            </h4>
                            
                        </div>
                    </div>
                </div>

                <div class="card p-3 align-center col-12 col-md-6 col-lg-4">
                    <div class="panel-item p-3">

                        <div class="card-texts">
                            <h3 class="pt-3 pb-3 mbr-fonts-style display-2">
                                @Html.DisplayFor(model => model.TerminRealizacji)
                            </h3>
                            <h4 class="mbr-content-title mbr-bold mbr-fonts-style display-7">
                                Termin realizacji
                            </h4>
                            
                        </div>
                    </div>
                </div>

            </div> <!--rowEnd-->
            
            <div class="media-container-row">

                <div class="card p-3 align-center col-12 col-md-6 col-lg-3">
                    <div class="panel-item p-3">

                        <div class="card-texts">
                                @if (Model.Poziom == 0)
                                {
                                    <h3 class="pt-3 pb-3 mbr-fonts-style display-2">
                                       Parter
                                    </h3>
                                }
                                else
                                {
                                    <h3 class="count pt-3 pb-3 mbr-fonts-style display-2">
                                        @Html.DisplayFor(model => model.Poziom)
                                    </h3>
                                }
                            <h4 class="mbr-content-title mbr-bold mbr-fonts-style display-7">
                                Piętro mieszkania
                            </h4>
                            
                        </div>
                    </div>
                </div>
                
                @if (Model.Garaz == true)
                {
                <div class="card p-3 align-center col-12 col-md-6 col-lg-3">
                    <div class="panel-item p-3">

                        <div class="card-texts">
                            <h3 class="pt-3 pb-3 mbr-fonts-style display-2">
                                Tak
                            </h3>
                            <h4 class="mbr-content-title mbr-bold mbr-fonts-style display-7">
                                Garaż
                            </h4>
                            
                        </div>
                    </div>
                </div>
                }

                @if (Model.Antresola == true)
                {
                    <div class="card p-3 align-center col-12 col-md-6 col-lg-3">
                        <div class="panel-item p-3">

                            <div class="card-texts">
                                <h3 class="pt-3 pb-3 mbr-fonts-style display-2">
                                    Tak
                                </h3>
                                <h4 class="mbr-content-title mbr-bold mbr-fonts-style display-7">
                                    Antresola
                                </h4>

                            </div>
                        </div>
                    </div>
                }

                @if (Model.KomorkaLokatorska == true)
                {
                <div class="card p-3 align-center col-12 col-md-6 col-lg-3">
                    <div class="panel-item p-3">

                        <div class="card-texts">
                            <h3 class="pt-3 pb-3 mbr-fonts-style display-2">
                                Tak
                            </h3>
                            <h4 class="mbr-content-title mbr-bold mbr-fonts-style display-7">
                                Komórka lokatorska
                            </h4>
                            
                        </div>
                    </div>
                </div>
                }

                @if (Model.Ogrod != null)
                {
                    <div class="card p-3 align-center col-12 col-md-6 col-lg-3">
                        <div class="panel-item p-3">

                            <div class="card-texts">
                                <h3 class="count pt-3 pb-3 mbr-fonts-style display-2">
                                    @Html.DisplayFor(model => model.Ogrod)
                                </h3>
                                <h4 class="mbr-content-title mbr-bold mbr-fonts-style display-7">
                                    Powierzchnia ogrodu
                                </h4>
                                
                            </div>
                        </div>
                    </div>
                }

                @if (Model.DodatkoweInfo != null)
                {
                    <div class="card p-3 align-center col-12 col-md-6 col-lg-3">
                        <div class="panel-item p-3">

                            <div class="card-texts">    
                                <h4 class="mbr-content-title mbr-bold mbr-fonts-style display-7">
                                    Dodatkowe informacje
                                </h4>
                                <p class="mbr-content-text mbr-fonts-style display-7">
                                    @Html.DisplayFor(model => model.DodatkoweInfo)
                                </p>
                            </div>
                        </div>
                    </div>
                }

            </div> <!--rowEnd-->

            </div>

    </div>
</section>
<!--kartyEnd-->
