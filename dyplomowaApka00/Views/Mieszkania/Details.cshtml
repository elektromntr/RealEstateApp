    <figure class="mbr-figure container">
        <div class="image-block mx-auto" style="width: 80%;">
            <a href="@Html.DisplayFor(model => model.ImageFile)" target="_blank"><img src="@Html.DisplayFor(model => model.ImageFile)" width="1400" alt="@Html.DisplayFor(model => model.SymbolMieszkania)" media-simple="true"></a>
        </div>
    </figure>
</section>
